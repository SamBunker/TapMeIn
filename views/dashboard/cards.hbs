{{!-- My Cards Page --}}
<div class="container-fluid">
    <div class="row">
        <!-- Sidebar -->
        <nav class="col-md-3 col-lg-2 d-none d-md-block bg-primary sidebar">
            <div class="position-sticky pt-3">
                <div class="d-flex align-items-center mb-4 text-white">
                    <i class="fas fa-credit-card fa-2x me-2"></i>
                    <h5 class="mb-0">TAP ME IN!</h5>
                </div>
                
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link text-white" href="/dashboard">
                            <i class="fas fa-tachometer-alt me-2"></i>Dashboard
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white active bg-warning" href="/dashboard/cards">
                            <i class="fas fa-credit-card me-2"></i>My Cards
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" href="/dashboard/profiles">
                            <i class="fas fa-user-circle me-2"></i>Profiles
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" href="/dashboard/analytics">
                            <i class="fas fa-chart-line me-2"></i>Analytics
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" href="/dashboard/subscription">
                            <i class="fas fa-crown me-2"></i>Subscription
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" href="/dashboard/support">
                            <i class="fas fa-life-ring me-2"></i>Support
                        </a>
                    </li>
                </ul>
            </div>
        </nav>
        
        <!-- Main content -->
        <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
            <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                <h1 class="h2 text-primary">
                    <i class="fas fa-credit-card me-2"></i>My NFC Cards
                </h1>
                <div class="btn-toolbar mb-2 mb-md-0">
                    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#activateCardModal">
                        <i class="fas fa-plus me-1"></i>Activate New Card
                    </button>
                </div>
            </div>
            
            {{#if cards.length}}
                <div class="row">
                    {{#each cards}}
                        <div class="col-lg-4 col-md-6 mb-4">
                            <div class="card {{#if isActivated}}border-success{{else}}border-warning{{/if}}">
                                <div class="card-header {{#if isActivated}}bg-success{{else}}bg-warning{{/if}} text-white">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <h6 class="mb-0">
                                            {{#if nickname}}{{nickname}}{{else}}Card {{cardUID}}{{/if}}
                                        </h6>
                                        <span class="badge {{#if isActivated}}bg-light text-success{{else}}bg-light text-warning{{/if}}">
                                            {{#if isActivated}}Active{{else}}Ready{{/if}}
                                        </span>
                                    </div>
                                </div>
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-6">
                                            <small class="text-muted">Card ID</small>
                                            <p class="mb-2 font-monospace">{{cardUID}}</p>
                                        </div>
                                        <div class="col-6">
                                            <small class="text-muted">Type</small>
                                            <p class="mb-2 text-capitalize">{{cardType}}</p>
                                        </div>
                                    </div>
                                    
                                    {{#if isActivated}}
                                        <div class="row">
                                            <div class="col-6">
                                                <small class="text-muted">Total Taps</small>
                                                <p class="mb-2 h5 text-success">{{tapCount}}</p>
                                            </div>
                                            <div class="col-6">
                                                <small class="text-muted">Activated</small>
                                                <p class="mb-2">{{formatDate activatedAt}}</p>
                                            </div>
                                        </div>
                                        
                                        <div class="mt-3">
                                            <a href="/tap/{{cardUID}}" target="_blank" class="btn btn-sm btn-outline-primary me-2">
                                                <i class="fas fa-external-link-alt me-1"></i>Test Tap
                                            </a>
                                            <button class="btn btn-sm btn-outline-secondary" disabled>
                                                <i class="fas fa-edit me-1"></i>Edit
                                            </button>
                                        </div>
                                    {{else}}
                                        <div class="text-center">
                                            <p class="text-muted">This card is ready to be activated</p>
                                            <button class="btn btn-primary btn-sm" data-card-uid="{{cardUID}}" onclick="activateCard(this)">
                                                <i class="fas fa-play me-1"></i>Activate Now
                                            </button>
                                        </div>
                                    {{/if}}
                                </div>
                            </div>
                        </div>
                    {{/each}}
                </div>
            {{else}}
                <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-body text-center py-5">
                                <i class="fas fa-credit-card fa-4x text-muted mb-3"></i>
                                <h4 class="text-muted">No Cards Yet</h4>
                                <p class="text-muted">You haven't activated any NFC cards yet. Get started by activating your first card!</p>
                                <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#activateCardModal">
                                    <i class="fas fa-plus me-2"></i>Activate Your First Card
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            {{/if}}
        </main>
    </div>
</div>

<!-- Activate Card Modal -->
<div class="modal fade" id="activateCardModal" tabindex="-1" aria-labelledby="activateCardModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title" id="activateCardModalLabel">
                    <i class="fas fa-credit-card me-2"></i>Activate NFC Card
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form action="/dashboard/activate-card" method="POST" id="activateCardForm">
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="activationCode" class="form-label">Activation Code</label>
                        <input type="text" 
                               class="form-control" 
                               id="activationCode" 
                               name="activationCode" 
                               placeholder="Enter the code from your card package"
                               pattern="[A-Z0-9]{6,12}"
                               required>
                        <div class="form-text">
                            Find this code on your card package or receipt.
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="cardNickname" class="form-label">Card Nickname (Optional)</label>
                        <input type="text" 
                               class="form-control" 
                               id="cardNickname" 
                               name="nickname" 
                               placeholder="e.g., Business Card, Personal Card"
                               maxlength="50">
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-check me-1"></i>Activate Card
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    // Auto-uppercase activation code
    document.getElementById('activationCode').addEventListener('input', function() {
        this.value = this.value.toUpperCase();
    });
    
    // Form submission handling
    document.getElementById('activateCardForm').addEventListener('submit', function(e) {
        const submitBtn = this.querySelector('button[type="submit"]');
        const originalText = submitBtn.innerHTML;
        
        submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin me-1"></i>Activating...';
        submitBtn.disabled = true;
        
        // Re-enable after timeout if not redirected
        setTimeout(() => {
            submitBtn.innerHTML = originalText;
            submitBtn.disabled = false;
        }, 5000);
    });
    
    // Quick activate for existing cards (placeholder)
    function activateCard(button) {
        const cardUID = button.getAttribute('data-card-uid');
        alert(`Quick activation for card ${cardUID} would happen here. For now, please use the "Activate New Card" button.`);
    }
</script>