<div class="container-fluid">
    <div class="row">
        <!-- Sidebar -->
        <nav class="col-md-3 col-lg-2 d-none d-md-block bg-primary sidebar">
            <div class="position-sticky pt-3">
                <div class="d-flex align-items-center mb-4 text-white">
                    <i class="fas fa-credit-card fa-2x me-2"></i>
                    <h5 class="mb-0">TAP ME IN!</h5>
                </div>
                
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link text-white" href="/dashboard">
                            <i class="fas fa-tachometer-alt me-2"></i>Dashboard
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" href="/dashboard/cards">
                            <i class="fas fa-credit-card me-2"></i>My Cards
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" href="/dashboard/profiles">
                            <i class="fas fa-user-circle me-2"></i>Profiles
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white active bg-warning" href="/dashboard/analytics">
                            <i class="fas fa-chart-line me-2"></i>Analytics
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" href="/dashboard/subscription">
                            <i class="fas fa-crown me-2"></i>Subscription
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" href="/dashboard/support">
                            <i class="fas fa-life-ring me-2"></i>Support
                        </a>
                    </li>
                </ul>
            </div>
        </nav>
        
        <!-- Main content -->
        <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
            <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                <h1 class="h2 text-primary">
                    <i class="fas fa-chart-line me-2"></i>Analytics Dashboard
                </h1>
            </div>
            
            <!-- Quick Stats -->
            <div class="row mb-4">
                <div class="col-xl-3 col-md-6 mb-3">
                    <div class="card border-left-primary shadow h-100 py-2">
                        <div class="card-body">
                            <div class="row no-gutters align-items-center">
                                <div class="col mr-2">
                                    <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                        Active Cards
                                    </div>
                                    <div class="h5 mb-0 font-weight-bold text-gray-800">
                                        {{stats.activeCards}}
                                    </div>
                                </div>
                                <div class="col-auto">
                                    <i class="fas fa-credit-card fa-2x text-gray-300"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="col-xl-3 col-md-6 mb-3">
                    <div class="card border-left-success shadow h-100 py-2">
                        <div class="card-body">
                            <div class="row no-gutters align-items-center">
                                <div class="col mr-2">
                                    <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                        Total Taps
                                    </div>
                                    <div class="h5 mb-0 font-weight-bold text-gray-800">
                                        {{stats.totalTaps}}
                                    </div>
                                </div>
                                <div class="col-auto">
                                    <i class="fas fa-hand-pointer fa-2x text-gray-300"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="col-xl-3 col-md-6 mb-3">
                    <div class="card border-left-warning shadow h-100 py-2">
                        <div class="card-body">
                            <div class="row no-gutters align-items-center">
                                <div class="col mr-2">
                                    <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                        This Month
                                    </div>
                                    <div class="h5 mb-0 font-weight-bold text-gray-800">
                                        {{stats.thisMonthTaps}}
                                    </div>
                                </div>
                                <div class="col-auto">
                                    <i class="fas fa-calendar fa-2x text-gray-300"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="col-xl-3 col-md-6 mb-3">
                    <div class="card border-left-info shadow h-100 py-2">
                        <div class="card-body">
                            <div class="row no-gutters align-items-center">
                                <div class="col mr-2">
                                    <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                        Profiles
                                    </div>
                                    <div class="h5 mb-0 font-weight-bold text-gray-800">
                                        {{stats.totalProfiles}}
                                    </div>
                                </div>
                                <div class="col-auto">
                                    <i class="fas fa-user-circle fa-2x text-gray-300"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header bg-primary text-white">
                            <h5 class="mb-0">Advanced Analytics</h5>
                        </div>
                        <div class="card-body text-center py-5">
                            <i class="fas fa-chart-bar fa-4x text-primary mb-3"></i>
                            <h4 class="text-primary">Detailed Analytics Coming Soon!</h4>
                            <p class="text-muted">Get insights into your NFC card performance and user engagement.</p>
                            <p class="small text-muted">
                                This feature will include:
                            </p>
                            <ul class="list-unstyled text-muted">
                                <li><i class="fas fa-check text-success me-2"></i>Real-time tap tracking</li>
                                <li><i class="fas fa-check text-success me-2"></i>Geographic heat maps</li>
                                <li><i class="fas fa-check text-success me-2"></i>Time-based analytics</li>
                                <li><i class="fas fa-check text-success me-2"></i>Device and browser insights</li>
                                <li><i class="fas fa-check text-success me-2"></i>Conversion tracking</li>
                                <li><i class="fas fa-check text-success me-2"></i>Custom reports and exports</li>
                            </ul>
                            <a href="/dashboard" class="btn btn-primary mt-3">
                                <i class="fas fa-arrow-left me-2"></i>Back to Dashboard
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>
</div>