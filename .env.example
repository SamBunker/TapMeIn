# Server Configuration
NODE_ENV=development
PORT=3000
BASE_URL=http://localhost:3000

# Database
MONGODB_URI=mongodb://localhost:27017/tapmeinnfc_dev
MONGODB_TEST_URI=mongodb://localhost:27017/tapmeinnfc_test

# Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_EXPIRE=24h
JWT_REFRESH_EXPIRE=7d
SESSION_SECRET=your-session-secret-change-this-in-production

# Email Service (SendGrid)
SENDGRID_API_KEY=your-sendgrid-api-key
FROM_EMAIL=noreply@tapmeinnfc.com
FROM_NAME=TapMeIn NFC

# SMS Service (Twilio)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Payment Processing (Stripe)
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-stripe-webhook-secret

# Geolocation Service (IPInfo)
IPINFO_API_KEY=your-ipinfo-api-key

# AI Service (OpenAI)
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4

# Feature Flags
ENABLE_SMS=false
ENABLE_WEBHOOKS=false
ENABLE_AI_EMAIL=false
ENABLE_CALENDAR_INTEGRATION=false

# Trial Configuration
TRIAL_DAYS=14
GRACE_PERIOD_DAYS=3

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# Redis (Optional - for caching and sessions)
REDIS_URL=redis://localhost:6379

# Monitoring & Logging
LOG_LEVEL=debug
SENTRY_DSN=your-sentry-dsn

# Development
DEBUG=tapmeinnfc:*